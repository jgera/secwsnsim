<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="pt.unl.fct.di.mei.securesim.rcp.SimulationApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Main Perspective"
            class="pt.unl.fct.di.mei.securesim.rcp.perspectives.MainPerspective"
            id="pt.unl.fct.di.mei.securesim.rcp.perspectives.MainPerspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="pt.unl.fct.di.mei.securesim.rcp.application"
            name="Secure Routing Sensor Simulation Platform">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Secure Routing Sensor Simulation Platform">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="pt.unl.fct.di.mei.securesim.rcp.views.NetworkView"
            id="pt.unl.fct.di.mei.securesim.rcp.views.NetworkView"
            name="NetworkView"
            restorable="true">
      </view>
      <view
            class="pt.unl.fct.di.mei.securesim.rcp.views.ImageView"
            id="pt.unl.fct.di.mei.securesim.rcp.views.ImageView"
            name="Image View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="pt.unl.fct.di.mei.securesim.rcp.commands.ExitHandler"
            description="Exit"
            id="pt.unl.fct.di.mei.securesim.rcp.commands.Exit"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="pt.unl.fct.di.mei.securesim.rcp.commands.OpenEditor"
                  label="Open Editor"
                  style="push"
                  tooltip="Open Editor">
            </command>
            <separator
                  name="File Separator1"
                  visible="true">
            </separator>
            <command
                  commandId="pt.unl.fct.di.mei.securesim.rcp.commands.Exit"
                  label="Exit"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="pt.unl.fct.di.mei.securesim.rcp.views.NetworkView"
               minimized="false"
               moveable="true"
               ratio="0.4f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="pt.unl.fct.di.mei.securesim.rcp.views.ImageView"
               minimized="false"
               moveable="true"
               ratio="0.95f"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="pt.unl.fct.di.mei.securesim.graph.views.GraphView"
               minimized="false"
               moveable="true"
               ratio="0.5f"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="pt.unl.fct.di.mei.securesim.rcp.views.ImageViewContribution"
            targetID="pt.unl.fct.di.mei.securesim.rcp.views.ImageView">
         <action
               class="pt.unl.fct.di.mei.securesim.rcp.actions.PushActionDelegate"
               id="toolbar.open"
               label="Open"
               style="push"
               toolbarPath="push_group"
               tooltip="Open Image">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="pt.unl.fct.di.mei.securesim.rcp.splashHandlers.InteractiveSplashHandler"
            id="pt.unl.fct.di.mei.securesim.rcp.splashHandlers.interactive">
      </splashHandler>
   </extension>

</plugin>
